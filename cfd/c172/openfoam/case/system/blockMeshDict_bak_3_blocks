(
    inlet
    {
        type patch;
        faces
        (
            ( 0 4 7 3 )
        );
    }
    
    outlet
    {
        type patch;
        faces
        (
            ( 12 13 15 14 )
        );
    }
    
    walls
    {
        type patch;
        faces
        (
            // left
            (  0  1  5  4 )
            (  1  8 10  5 )
            (  8 12 14 10 )
            
            // right
            (  3  7  6  2 )
            (  2  6 11  9 )
            (  9 11 15 13 )
            
            // bottom
            (  0  3  2  1 )
            (  1  2  9  8 )
            (  8  9 13 12 )
            
            // top
            (  4  5  6  7 )
            (  5 10 11  6 )
            ( 10 14 15 11 )
        );
    }
);

