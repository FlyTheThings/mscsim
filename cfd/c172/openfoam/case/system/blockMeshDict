FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      blockMeshDict;
}

////////////////////////////////////////////////////////////////////////////////

controlVolLength  100.0;
controlVolWidth   50.0;
controlVolHeight  50.0;

////////////////////////////////////////////////////////////////////////////////

cv_x_min  #calc "-0.4*$controlVolLength";
cv_x_max  #calc " 0.6*$controlVolLength";
cv_y_min  #calc "-0.5*$controlVolWidth";
cv_y_max  #calc " 0.5*$controlVolWidth";
cv_z_min  #calc "-0.5*$controlVolHeight";
cv_z_max  #calc " 0.5*$controlVolHeight";

////////////////////////////////////////////////////////////////////////////////

convertToMeters 1;

vertices
(
      ( $cv_x_min $cv_y_min $cv_z_min )
      ( $cv_x_max $cv_y_min $cv_z_min )
      ( $cv_x_max $cv_y_max $cv_z_min )
      ( $cv_x_min $cv_y_max $cv_z_min )
      ( $cv_x_min $cv_y_min $cv_z_max )
      ( $cv_x_max $cv_y_min $cv_z_max )
      ( $cv_x_max $cv_y_max $cv_z_max )
      ( $cv_x_min $cv_y_max $cv_z_max )
);

blocks
(
//     hex ( 0 1 2 3 4 5 6 7 ) ( 100 50 50 ) simpleGrading ( 1 1 1 )
    hex ( 0 1 2 3 4 5 6 7 ) ( 40 20 20 ) simpleGrading ( 1 1 1 )
);

edges
(
);

boundary
(
    inlet
    {
        type patch;
        faces
        (
            ( 0 4 7 3 )
        );
    }
    
    outlet
    {
        type patch;
        faces
        (
            ( 1 2 6 5 )
        );
    }
    
    left
    {
        type patch;
        faces
        (
            ( 0 1 5 4 )
        );
    }
    
    right
    {
        type patch;
        faces
        (
            ( 3 7 6 2 )
        );
    }
    
    bottom
    {
        type patch;
        faces
        (
            ( 0 3 2 1 )
        );
    }
    
    top
    {
        type patch;
        faces
        (
            ( 4 5 6 7 )
        );
    }
);

////////////////////////////////////////////////////////////////////////////////
